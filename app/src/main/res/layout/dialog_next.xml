<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/White"
              android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Are you sure want to swap this item with below 2 items you selected?"
        android:textColor="@color/Black"
        android:layout_margin="20dp"
        android:textSize="@dimen/Medium_Text_Size"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/item1"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/Black"
            android:text="or"
            android:layout_margin="20dp"
            android:layout_gravity="center"
            android:textSize="@dimen/Medium_Text_Size"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/item1"/>


    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="The onwer will have 72 hours to accept or decline this swap request."
        android:textColor="@color/Black"
        android:layout_margin="20dp"
        android:textSize="@dimen/Medium_Text_Size"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="@color/Red_Light"
        android:padding="5dp">

        <TextView
            android:id="@+id/txtv_confirm"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@color/Red_Light"
            android:layout_weight="1"
            android:text="Confirm"
            android:gravity="center"
            android:textColor="@color/White"
            android:textStyle="bold"/>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:background="@color/White" />


        <TextView
            android:id="@+id/txtv_cancel"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:background="@color/Red_Light"
            android:gravity="center"
            android:text="Cancel"
            android:textColor="@color/White"
            android:textStyle="bold"/>

    </LinearLayout>
</LinearLayout>
