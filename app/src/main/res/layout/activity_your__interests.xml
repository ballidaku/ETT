<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/White"
              android:orientation="vertical">


    <include layout="@layout/my_toolbar"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="Categories you are interested in"
                android:textColor="@color/Red_Light"
                android:textSize="@dimen/Text_Heading"
                android:textStyle="bold"
                />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:orientation="vertical">

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/gray_selector_round_corners"
                    android:gravity="center"
                    android:text="Beauty"
                    android:textColor="@color/Black"
                    android:textSize="@dimen/Text_Heading"
                    android:textStyle="bold"/>

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/gray_selector_round_corners"
                    android:gravity="center"
                    android:text="Books"
                    android:textColor="@color/Black"
                    android:textSize="@dimen/Text_Heading"
                    android:textStyle="bold"/>

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/gray_selector_round_corners"
                    android:gravity="center"
                    android:text="Tool"
                    android:textColor="@color/Black"
                    android:textSize="@dimen/Text_Heading"
                    android:textStyle="bold"/>

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/gray_selector_round_corners"
                    android:gravity="center"
                    android:text="Appliances"
                    android:textColor="@color/Black"
                    android:textSize="@dimen/Text_Heading"
                    android:textStyle="bold"/>

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/gray_selector_round_corners"
                    android:gravity="center"
                    android:text="Labor service"
                    android:textColor="@color/Black"
                    android:textSize="@dimen/Text_Heading"
                    android:textStyle="bold"/>

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/gray_selector_round_corners"
                    android:gravity="center"
                    android:text="Carpool service"
                    android:textColor="@color/Black"
                    android:textSize="@dimen/Text_Heading"
                    android:textStyle="bold"/>

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/gray_selector_round_corners"
                    android:gravity="center"
                    android:text="Home and Kiitchen"
                    android:textColor="@color/Black"
                    android:textSize="@dimen/Text_Heading"
                    android:textStyle="bold"/>

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/gray_selector_round_corners"
                    android:gravity="center"
                    android:text="Mom and Baby"
                    android:textColor="@color/Black"
                    android:textSize="@dimen/Text_Heading"
                    android:textStyle="bold"/>

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/gray_selector_round_corners"
                    android:gravity="center"
                    android:text="Office"
                    android:textColor="@color/Black"
                    android:textSize="@dimen/Text_Heading"
                    android:textStyle="bold"/>


                <LinearLayout
                    android:id="@+id/lay_show_more"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Show More"
                        android:textColor="@color/Red_Light"
                        android:textStyle="bold"
                        android:textSize="@dimen/Text_Heading"/>

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="2dp"
                        android:background="@color/Red_Light"/>

                </LinearLayout>

                <Button
                    android:id="@+id/button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/red_selector_large_round_corners"
                    android:text="+ Add or - remove"
                    android:textColor="@color/White"
                    android:textSize="@dimen/Text_Heading"
                    android:textStyle="bold"/>


            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>
