<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/White"
              android:orientation="vertical">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Categories you are interested in"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:textColor="@color/Red_Light"
        android:textStyle="bold"
        android:textSize="@dimen/Text_Heading"
        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp">

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/gray_selector_round_corners"
            android:text="Beauty"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="@dimen/Text_Heading"
            android:textColor="@color/Black"/>

        <Button
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/gray_selector_round_corners"
            android:text="Books"
            android:textStyle="bold"
            android:gravity="center"
            android:textSize="@dimen/Text_Heading"
            android:textColor="@color/Black"/>


       <!-- <Button
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/gray_selector_round_corners"
            android:text="Tool"
            android:textStyle="bold"
            android:gravity="center"
            android:textSize="@dimen/Text_Heading"
            android:textColor="@color/Black"/>-->

        <LinearLayout
            android:id="@+id/lay_show_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:padding="10dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Show More"
                android:textColor="@color/Red_Light"
                android:textStyle="bold"
                android:textSize="@dimen/Text_Heading"/>

            <View
                android:layout_width="fill_parent"
                android:layout_height="2dp"
                android:background="@color/Red_Light"/>

        </LinearLayout>

        <Button
            android:layout_marginTop="10dp"
            android:id="@+id/button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="+ Add or - remove"
            android:background="@drawable/red_selector_large_round_corners"
            android:textStyle="bold"
            android:textSize="@dimen/Text_Heading"
            android:textColor="@color/White"/>


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">



        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Liked listing"
            android:padding="10dp"
            android:textColor="@color/Red_Light"
            android:textStyle="bold"
            android:textSize="@dimen/Text_Heading"/>

        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:background="@color/Gray" />
    </LinearLayout>


    <ListView
        android:id="@+id/listv_liked_listing"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">


    </ListView>

</LinearLayout>
